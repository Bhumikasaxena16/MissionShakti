<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_height="wrap_content">

   <LinearLayout
       android:id="@+id/border_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"
       android:background="@color/OrangeRed"
       android:orientation="horizontal">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_1sdp"
          android:layout_marginBottom="@dimen/_2sdp"
          app:cardCornerRadius="@dimen/_5sdp">


         <LinearLayout
             android:id="@+id/card_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:orientation="horizontal">


                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.3"
                      android:layout_marginHorizontal="@dimen/_5sdp"
                      android:orientation="vertical">


                     <TextView
                         android:id="@+id/tv_business_name"
                         style="@style/TextViewSemiBoldBlack"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Business name"
                         android:layout_marginTop="@dimen/_2sdp"
                         android:textColor="@color/colorPrimary"
                         android:textSize="@dimen/_10sdp" />

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/_2sdp"
                         android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_contact"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0123456790"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight=".5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_establishment_year"
                            style="@style/TextViewRegularNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Since: 1965"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>



                     <View
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/_1sdp"
                         android:background="@color/placeholder_bg"
                         android:layout_marginVertical="@dimen/_2sdp"/>



                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/_2sdp"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewMediumNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Nature of operation"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1.5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_nature_of_operation"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Micro"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/_2sdp"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewMediumNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Type of unit"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1.5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_type_of_unit"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Casual"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>


                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/_2sdp"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewMediumNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Nature of Job"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1.5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_nature_of_job"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semi-Skilled"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/_2sdp"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewMediumNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Employment type"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1.5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_employment_type"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Permanent"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/_2sdp"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewMediumNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Vendor Agreement"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1.5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_vendor_agreement"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/_2sdp"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewMediumNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Suppliers increased"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1.5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_suppliers_increased"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                  </LinearLayout>



               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_1sdp"
                   android:background="@color/placeholder_bg"
                   android:layout_marginTop="@dimen/_5sdp"/>

               <TextView
                   android:id="@+id/tv_address"
                   style="@style/TextViewMediumBlack"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Address"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:textSize="@dimen/_9sdp" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_1sdp"
                   android:background="@color/placeholder_bg"
                   android:layout_marginTop="@dimen/_5sdp"/>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                  <TextView
                      style="@style/TextViewRegularNormal"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Visited on"
                      android:layout_marginTop="@dimen/_2sdp"
                      android:textAlignment="textStart"
                      android:singleLine="true"
                      android:ellipsize="middle"
                      android:layout_weight=".5"
                      android:textSize="@dimen/_8sdp" />

                  <TextView
                      android:id="@+id/tv_created_at"
                      style="@style/TextViewRegularBlack"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Application created at"
                      android:layout_marginTop="@dimen/_2sdp"
                      android:textAlignment="textEnd"
                      android:singleLine="true"
                      android:ellipsize="middle"
                      android:layout_weight="1"
                      android:textSize="@dimen/_8sdp" />



               </LinearLayout>

            </LinearLayout>

         </LinearLayout>

      </androidx.cardview.widget.CardView>


   </LinearLayout>


</androidx.cardview.widget.CardView>
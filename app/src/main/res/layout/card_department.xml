<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_height="wrap_content">

   <LinearLayout
       android:id="@+id/border_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"
       android:orientation="horizontal">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_1sdp"
          android:layout_marginBottom="@dimen/_1sdp"
          app:cardCornerRadius="@dimen/_5sdp">


         <LinearLayout
             android:id="@+id/card_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:orientation="horizontal">


                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1.3"
                      android:layout_marginHorizontal="@dimen/_5sdp"
                      android:orientation="vertical">


                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_dept_name"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Applicant name"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:drawableEnd="@drawable/ic_arrow_forward_new"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <View
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/_1sdp"
                         android:background="@color/placeholder_bg"
                         android:layout_marginVertical="@dimen/_2sdp"/>



                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewLightNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Code"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight=".5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_dept_code"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Mobile number"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewLightNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Mobile number"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight=".5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_dept_mobile"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Mobile number"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>



                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewLightNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Alternate mobile"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight=".5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_dept_alt_mobile"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Alternate mobile"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewLightNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight=".5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_dept_email"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewLightNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Website"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight=".5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_dept_website"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Website"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewLightNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="District"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight=".5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_dept_district"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="District"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewLightNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight=".5"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/tv_dept_state"
                            style="@style/TextViewMediumBlack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textAlignment="textEnd"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp" />



                     </LinearLayout>


                  </LinearLayout>



               </LinearLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_1sdp"
                   android:background="@color/placeholder_bg"
                   android:layout_marginTop="@dimen/_5sdp"/>



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/_5sdp"
                   android:orientation="horizontal">

                  <TextView
                      style="@style/TextViewLightNormal"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Created at"
                      android:layout_marginTop="@dimen/_2sdp"
                      android:textAlignment="textStart"
                      android:singleLine="true"
                      android:ellipsize="middle"
                      android:layout_weight=".5"
                      android:textSize="@dimen/_8sdp" />

                  <TextView
                      android:id="@+id/tv_created_at"
                      style="@style/TextViewRegularBlack"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="created at"
                      android:layout_marginTop="@dimen/_2sdp"
                      android:textAlignment="textEnd"
                      android:singleLine="true"
                      android:ellipsize="middle"
                      android:layout_weight="1"
                      android:textSize="@dimen/_8sdp" />



               </LinearLayout>

            </LinearLayout>

         </LinearLayout>

      </androidx.cardview.widget.CardView>


   </LinearLayout>


</androidx.cardview.widget.CardView>